<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="fetchmail_server_view_form_l10n_it_edi_pec" model="ir.ui.view">
        <field name="name">fetchmail.server.form.l10n_it_edi_pec</field>
        <field name="model">fetchmail.server</field>
        <field name="inherit_id" ref="fetchmail.view_fetchmail_server_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="inside">
                <group>
                    <field name="is_l10n_it_edi_pec"/>
                </group>
                <group string="E-invoice PEC Incoming" invisible="not is_l10n_it_edi_pec">
                    <field name="last_pec_error_message" readonly="1"/>
                    <field name="pec_error_count" readonly="1"/>
                    <field name="e_inv_notify_partner_ids" widget="many2many_tags"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
